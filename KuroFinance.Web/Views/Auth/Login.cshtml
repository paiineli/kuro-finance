@model LoginViewModel
@{ Layout = "_AuthLayout"; }

<div class="auth-wrapper">
  <div class="auth-card">

    <div class="text-center mb-4">
      <h1 class="fs-4 fw-bold mb-1">kuro<span class="brand-finance">finance</span></h1>
      <p class="text-secondary small mb-0">Gestão financeira pessoal</p>
    </div>

    <div class="card">
      <div class="card-body p-4">
        <h5 class="fw-semibold mb-4">Entrar</h5>

        @if (TempData["Success"] is string success)
        {
          <div class="alert alert-success py-2 small mb-3">@success</div>
        }
        @if (TempData["Error"] is string error)
        {
          <div class="alert alert-danger py-2 small mb-3">@error</div>
        }

        <form asp-action="Login" method="post" novalidate>
          @Html.AntiForgeryToken()

          <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small mb-3" style="display:@(ViewData.ModelState.IsValid ? "none" : "block")"></div>

          <div class="mb-3">
            <label asp-for="Email" class="form-label small">E-mail</label>
            <input asp-for="Email" class="form-control" placeholder="seu@email.com" autocomplete="email">
            <span asp-validation-for="Email" class="text-danger small"></span>
          </div>

          <div class="mb-4">
            <label asp-for="Password" class="form-label small">Senha</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" autocomplete="current-password">
            <span asp-validation-for="Password" class="text-danger small"></span>
          </div>

          <button type="submit" class="btn btn-primary w-100">Entrar</button>
        </form>

        <div class="d-flex align-items-center my-3">
          <hr class="flex-grow-1 border-secondary"><span class="px-2 text-secondary small">ou</span><hr class="flex-grow-1 border-secondary">
        </div>

        <a href="/Auth/GoogleLogin" class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 48 48"><path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/><path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/><path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/><path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/><path fill="none" d="M0 0h48v48H0z"/></svg>
          Entrar com Google
        </a>

        <p class="text-center text-secondary small mt-3 mb-0">
          Não tem conta?
          <a asp-action="Register" class="text-green text-decoration-none">Criar conta</a>
        </p>
      </div>
    </div>

  </div>
</div>
