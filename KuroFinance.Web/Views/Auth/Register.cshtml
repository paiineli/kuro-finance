@model RegisterViewModel
@{ Layout = "_AuthLayout"; }

<div class="auth-wrapper">
  <div class="auth-card">

    <div class="text-center mb-4">
      <h1 class="fs-4 fw-bold mb-1">kuro<span class="brand-finance">finance</span></h1>
      <p class="text-secondary small mb-0">Gestão financeira pessoal</p>
    </div>

    <div class="card">
      <div class="card-body p-4">
        <h5 class="fw-semibold mb-4">Criar conta</h5>

        <form asp-action="Register" method="post" novalidate>
          @Html.AntiForgeryToken()

          <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small mb-3" style="display:@(ViewData.ModelState.IsValid ? "none" : "block")"></div>

          <div class="mb-3">
            <label asp-for="Name" class="form-label small">Nome</label>
            <input asp-for="Name" class="form-control" placeholder="Seu nome" autocomplete="name">
            <span asp-validation-for="Name" class="text-danger small"></span>
          </div>

          <div class="mb-3">
            <label asp-for="Email" class="form-label small">E-mail</label>
            <input asp-for="Email" class="form-control" placeholder="seu@email.com" autocomplete="email">
            <span asp-validation-for="Email" class="text-danger small"></span>
          </div>

          <div class="mb-4">
            <label asp-for="Password" class="form-label small">Senha</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Mínimo 6 caracteres" autocomplete="new-password">
            <span asp-validation-for="Password" class="text-danger small"></span>
          </div>

          <button type="submit" class="btn btn-primary w-100">Criar conta</button>
        </form>

        <p class="text-center text-secondary small mt-3 mb-0">
          Já tem conta?
          <a asp-action="Login" class="text-green text-decoration-none">Entrar</a>
        </p>
      </div>
    </div>

  </div>
</div>
